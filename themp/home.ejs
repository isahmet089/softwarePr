    <style>
        :root {
            --primary: #3498db;
            --primary-dark: #2980b9;
            --secondary: #e74c3c;
            --text-light: #ffffff;
            --text-dark: #2c3e50;
            --background: #f8f9fa;
            --card-bg: rgba(255, 255, 255, 0.95);
            --card-bg-solid: #ffffff;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --border-radius: 8px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            color: var(--text-dark);
            line-height: 1.6;
            min-height: 100vh;
            background-color: var(--background);
        }

        .hero {
            position: relative;
            height: 100vh;
            width: 100%;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: var(--text-light);
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            filter: brightness(0.8);
            z-index: -1;
        }

        .hero-content {
            max-width: 800px;
            padding: 0 20px;
            margin-bottom: 50px;
            z-index: 1;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 300;
            margin-bottom: 2rem;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .hero-button {
            background-color: var(--primary);
            color: var(--text-light);
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 500;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            display: inline-block;
        }

        .hero-button:hover {
            background-color: var(--primary-dark);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .search-container {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px 0;
            box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

        .search-tabs {
            display: flex;
            max-width: 1200px;
            margin: 0 auto;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .search-tab {
            padding: 10px 20px;
            cursor: pointer;
            font-weight: 500;
            color: var(--text-dark);
            position: relative;
            transition: var(--transition);
        }

        .search-tab.active {
            color: var(--primary);
        }

        .search-tab.active::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            height: 3px;
            background-color: var(--primary);
        }

        .search-form {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .search-input {
            flex: 1;
            min-width: 200px;
        }

        .search-input select,
        .search-input input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: var(--border-radius);
            font-size: 1rem;
            transition: var(--transition);
        }

        .search-input select:focus,
        .search-input input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }

        .search-button {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 500;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: var(--transition);
        }

        .search-button:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 0 20px;
        }

        .section-title {
            text-align: center;
            margin-bottom: 40px;
        }

        .section-title h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 10px;
        }

        .section-title p {
            font-size: 1.1rem;
            color: rgba(44, 62, 80, 0.7);
        }

        /* Yeni alt alta liste tasarımı */
        .ticket-list {
            display: flex;
            flex-direction: column;
            gap: 30px;
            margin-top: 30px;
        }

        .ticket-card {
            background-color: var(--card-bg-solid);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            display: flex;
            flex-direction: row;
            position: relative;
        }

        .ticket-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .ticket-image {
            flex: 0 0 300px;
            overflow: hidden;
        }

        .ticket-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .ticket-card:hover .ticket-image img {
            transform: scale(1.05);
        }

        .ticket-content {
            flex: 1;
            padding: 25px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .ticket-type {
            display: inline-block;
            padding: 5px 15px;
            background-color: rgba(52, 152, 219, 0.1);
            color: var(--primary);
            font-weight: 500;
            font-size: 0.9rem;
            border-radius: 50px;
            margin-bottom: 15px;
        }

        .ticket-route {
            font-size: 1.6rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--text-dark);
        }

        .ticket-details {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
        }

        .ticket-detail-item {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .ticket-detail-icon {
            width: 30px;
            height: 30px;
            background-color: rgba(52, 152, 219, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            color: var(--primary);
        }

        .ticket-detail-text {
            font-size: 0.95rem;
        }

        .ticket-detail-text strong {
            display: block;
            font-weight: 600;
            color: var(--text-dark);
        }

        .ticket-detail-text span {
            color: rgba(44, 62, 80, 0.7);
            font-size: 0.85rem;
        }

        .ticket-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
            padding-top: 20px;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }

        .ticket-company {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .company-logo {
            width: 30px;
            height: 30px;
            background-color: rgba(52, 152, 219, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            color: var(--primary);
        }

        .company-name {
            font-weight: 500;
            color: var(--text-dark);
        }

        .ticket-price-action {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .price-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-dark);
        }

        .ticket-button {
